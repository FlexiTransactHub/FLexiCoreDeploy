<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlexiTransact</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FlexiCore.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #0A3D62;
            color: #ffffff;
            font-family: 'Inter', 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: #0A3D62;
            padding: 10px 20px;
            z-index: 1020;
        }

        .navbar-brand {
            color: white !important;
            font-weight: 900;
            position: relative;
            z-index: 2;
        }

            .navbar-brand::before {
                content: '';
                position: absolute;
                top: -10px;
                left: -10px;
                width: 40px;
                height: 40px;
                background: url('https://via.placeholder.com/40?text=Logo') center/cover no-repeat;
                opacity: 0.7;
                z-index: -1;
            }

        .nav-link {
            color: white !important;
        }

        .navbar-toggler {
            border: none;
        }

        .btn-primary {
            background-color: #1877F2;
            border: none;
            font-weight: 700;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 0 15px rgba(24, 119, 242, 0.7);
            }

        .btn-outline-light {
            border-color: #ffffff;
            font-weight: 700;
            transition: background-color 0.2s, box-shadow 0.2s;
        }

            .btn-outline-light:hover {
                background-color: #1877F2;
                box-shadow: 0 0 15px rgba(24, 119, 242, 0.7);
            }
        @@media (min-width: 769px) {
            .authenticated .sidebar

        {
            display: block;
        }

        .authenticated .content {
            margin-left: 250px;
        }

        }
 

        
    </style>
</head>
<body class="@(User.Identity.IsAuthenticated ? "authenticated" : "")">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand ms-3 ms-sm-0" asp-area="" asp-controller="Home" asp-action="Index">FlexiTransact</a>
                <button class="navbar-toggler" type="button" onclick="toggleSidebar()">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
  
    <div class="content">
        @RenderBody()
    </div>
   @*  <br/>
    <footer class="footer text-muted bg-dark">
        <div class="container py-2 text-center">
            <a asp-controller="Home" asp-action="Index" class="text-white me-3">Home</a>
            <a asp-controller="Home" asp-action="Privacy" class="text-white me-3">Privacy</a>
            <a asp-controller="Home" asp-action="About" class="text-white">About</a>
            <p class="mb-0 mt-2">&copy; 2025 FlexiTransact</p>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>