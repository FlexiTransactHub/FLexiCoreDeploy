@model IEnumerable<FlexiCore.Models.Business>

@{
    ViewData["Title"] = "My Businesses";
    Layout = "_DashboardLayout";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    .page-subtitle {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-top: 0.5rem;
    }

    .btn-create {
        background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(24, 119, 242, 0.3);
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(24, 119, 242, 0.4);
            color: white;
        }

        .btn-create i {
            font-size: 1.1rem;
        }

    /* Business Grid */
    .businesses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .business-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 2rem;
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .business-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .business-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            border-color: var(--accent-primary);
        }

            .business-card:hover::before {
                transform: scaleX(1);
            }

    .business-header {
        display: flex;
        align-items: start;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .business-icon {
        width: 60px;
        height: 60px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        background: linear-gradient(135deg, rgba(24, 119, 242, 0.1), rgba(0, 212, 255, 0.1));
        flex-shrink: 0;
    }

        .business-icon i {
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .business-info {
        flex: 1;
    }

    .business-name {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }

    .business-type {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.375rem 0.875rem;
        background: var(--bg-primary);
        border-radius: 50px;
        font-size: 0.813rem;
        font-weight: 600;
        color: var(--accent-primary);
        border: 1px solid var(--border-color);
    }

        .business-type i {
            font-size: 0.875rem;
        }

    .business-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 1.5rem;
    }

    .action-btn {
        flex: 1;
        padding: 0.75rem 1rem;
        border-radius: 10px;
        border: 1px solid var(--border-color);
        background: var(--bg-primary);
        color: var(--text-primary);
        text-decoration: none;
        text-align: center;
        font-weight: 600;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

        .action-btn:hover {
            background: var(--accent-primary);
            color: white;
            border-color: var(--accent-primary);
            transform: translateY(-2px);
        }

        .action-btn i {
            font-size: 1rem;
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--bg-card);
        border: 2px dashed var(--border-color);
        border-radius: 16px;
        margin-top: 2rem;
    }

    .empty-icon {
        width: 100px;
        height: 100px;
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(24, 119, 242, 0.1), rgba(0, 212, 255, 0.1));
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .empty-icon i {
            font-size: 3rem;
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .empty-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .empty-text {
        color: var(--text-secondary);
        margin-bottom: 2rem;
    }

    @@media (max-width: 768px) {
        .businesses-grid

    {
        grid-template-columns: 1fr;
    }

    .page-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .business-actions {
        flex-direction: column;
    }

    }
</style>

<div class="page-header">
    <div>
        <h1 class="page-title">My Businesses</h1>
        <p class="page-subtitle">Manage and monitor all your business operations</p>
    </div>
    <a asp-action="Create" class="btn-create">
        <i class="bi bi-plus-circle"></i>
        Create New Business
    </a>
</div>

@if (Model.Any())
{
    <div class="businesses-grid">
        @foreach (var business in Model)
        {
            <div class="business-card">
                <div class="business-header">
                    <div class="business-icon">
                        <i class="bi @GetBusinessIcon(business.BusinessType)"></i>
                    </div>
                    <div class="business-info">
                        <h3 class="business-name">@business.Name</h3>
                        <span class="business-type">
                            <i class="bi bi-tag-fill"></i>
                            @business.BusinessType
                        </span>
                    </div>
                </div>

                <div class="business-actions">
                    <a asp-controller="Branches" asp-action="Index" asp-route-businessId="@business.Id" class="action-btn">
                        <i class="bi bi-shop"></i>
                        Branches
                    </a>
                    <a asp-controller="Products" asp-action="Index" asp-route-businessId="@business.Id" class="action-btn">
                        <i class="bi bi-box-seam"></i>
                        Products
                    </a>
                    <a asp-action="Edit" asp-route-id="@business.Id" class="action-btn">
                        <i class="bi bi-pencil"></i>
                        Edit
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="empty-state">
        <div class="empty-icon">
            <i class="bi bi-building"></i>
        </div>
        <h2 class="empty-title">No Businesses Yet</h2>
        <p class="empty-text">Get started by creating your first business and unlock powerful management tools.</p>
        <a asp-action="Create" class="btn-create">
            <i class="bi bi-plus-circle"></i>
            Create Your First Business
        </a>
    </div>
}

@functions {
    string GetBusinessIcon(string businessType)
    {
        return businessType?.ToLower() switch
        {
            "restaurant" => "bi-cup-hot",
            "pharmacy" => "bi-capsule",
            "supermarket" => "bi-cart4",
            "retail" => "bi-shop",
            "hotel" => "bi-building",
            "cafe" => "bi-cup-straw",
            _ => "bi-building"
        };
    }
}