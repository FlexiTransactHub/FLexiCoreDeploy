@model FlexiCore.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
    var branchId = ViewData["BranchId"] as int?;
    var branchName = ViewData["BranchName"] as string;
}

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <h4>Employee Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role</dd>
        <dt class="col-sm-2">Branch</dt>
        <dd class="col-sm-10">@branchName</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="BranchId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-route-branchId="@branchId" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}