@model IEnumerable<FlexiCore.Models.Sale>

@{
    ViewData["Title"] = "Sales";
    Layout = "_DashboardLayout";
    var branchId = ViewData["BranchId"];
    var businessId = Model.FirstOrDefault()?.BusinessId;
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    .page-subtitle {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-top: 0.5rem;
    }

    .breadcrumb-custom {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        color: var(--text-secondary);
        font-size: 0.875rem;
    }

        .breadcrumb-custom a {
            color: var(--accent-primary);
            text-decoration: none;
            transition: color 0.2s ease;
        }

            .breadcrumb-custom a:hover {
                color: var(--accent-secondary);
            }

    .btn-create {
        background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(24, 119, 242, 0.3);
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(24, 119, 242, 0.4);
            color: white;
        }

        .btn-create i {
            font-size: 1.1rem;
        }

    /* Stats Summary */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-lg);
        }

    .stat-label {
        font-size: 0.813rem;
        color: var(--text-secondary);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.25rem;
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: linear-gradient(135deg, rgba(24, 119, 242, 0.1), rgba(0, 212, 255, 0.1));
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }

        .stat-icon i {
            font-size: 1.25rem;
            color: var(--accent-primary);
        }

    /* Sales Grid */
    .sales-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .sale-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 1.75rem;
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .sale-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #10b981, #059669);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .sale-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            border-color: #10b981;
        }

            .sale-card:hover::before {
                transform: scaleX(1);
            }

    .sale-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1.25rem;
        gap: 1rem;
    }

    .sale-date-badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.75rem;
        background: linear-gradient(135deg, rgba(24, 119, 242, 0.1), rgba(0, 212, 255, 0.1));
        border-radius: 12px;
        min-width: 70px;
    }

    .sale-month {
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--accent-primary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .sale-day {
        font-size: 1.75rem;
        font-weight: 900;
        color: var(--text-primary);
        line-height: 1;
    }

    .sale-time {
        font-size: 0.75rem;
        color: var(--text-secondary);
        margin-top: 0.25rem;
    }

    .sale-amount {
        text-align: right;
        flex: 1;
    }

    .amount-label {
        font-size: 0.75rem;
        color: var(--text-secondary);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .amount-value {
        font-size: 1.75rem;
        font-weight: 900;
        background: linear-gradient(135deg, #10b981, #059669);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-top: 0.25rem;
    }

    .sale-details {
        display: flex;
        gap: 1.5rem;
        padding: 1rem;
        background: var(--bg-primary);
        border-radius: 10px;
        margin-bottom: 1.25rem;
    }

    .sale-detail {
        flex: 1;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .sale-detail i {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            background: var(--bg-card);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.938rem;
            color: var(--accent-primary);
            flex-shrink: 0;
        }

    .detail-content {
        display: flex;
        flex-direction: column;
        gap: 0.125rem;
        min-width: 0;
    }

    .detail-label {
        font-size: 0.75rem;
        color: var(--text-secondary);
        font-weight: 600;
    }

    .detail-value {
        font-size: 0.938rem;
        font-weight: 600;
        color: var(--text-primary);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .sale-actions {
        display: flex;
        gap: 0.75rem;
    }

    .action-btn {
        flex: 1;
        padding: 0.75rem 1rem;
        border-radius: 10px;
        border: 1px solid var(--border-color);
        background: var(--bg-primary);
        color: var(--text-primary);
        text-decoration: none;
        text-align: center;
        font-weight: 600;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

        .action-btn:hover {
            background: var(--accent-primary);
            color: white;
            border-color: var(--accent-primary);
            transform: translateY(-2px);
        }

        .action-btn i {
            font-size: 1rem;
        }

    .action-btn-delete:hover {
        background: #ef4444;
        border-color: #ef4444;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--bg-card);
        border: 2px dashed var(--border-color);
        border-radius: 16px;
        margin-top: 2rem;
    }

    .empty-icon {
        width: 100px;
        height: 100px;
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(24, 119, 242, 0.1), rgba(0, 212, 255, 0.1));
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .empty-icon i {
            font-size: 3rem;
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .empty-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .empty-text {
        color: var(--text-secondary);
        margin-bottom: 2rem;
    }

    @@media (max-width: 768px) {
        .sales-grid

    {
        grid-template-columns: 1fr;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .page-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .sale-details {
        flex-direction: column;
        gap: 1rem;
    }

    .sale-actions {
        flex-direction: column;
    }

    }
</style>

<div class="breadcrumb-custom">
    <a asp-controller="Businesses" asp-action="Index">
        <i class="bi bi-building"></i> My Businesses
    </a>
    <i class="bi bi-chevron-right"></i>
    <a asp-controller="Branches" asp-action="Index" asp-route-businessId="@businessId">
        <i class="bi bi-shop"></i> Branches
    </a>
    <i class="bi bi-chevron-right"></i>
    <span><i class="bi bi-graph-up"></i> Sales</span>
</div>

<div class="page-header">
    <div>
        <h1 class="page-title">Sales Transactions</h1>
        <p class="page-subtitle">Track and manage all sales records for this branch</p>
    </div>
    <a asp-action="Create" asp-route-branchId="@branchId" class="btn-create">
        <i class="bi bi-plus-circle"></i>
        Record New Sale
    </a>
</div>

@if (Model.Any())
{
    var totalRevenue = Model.Sum(s => s.TotalAmount);
    var totalTransactions = Model.Count();
    var totalItems = Model.Sum(s => s.SaleItems?.Count ?? 0);
    var averageSale = totalTransactions > 0 ? totalRevenue / totalTransactions : 0;

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-currency-dollar"></i>
            </div>
            <div class="stat-label">Total Revenue</div>
            <div class="stat-value">@totalRevenue.ToString("C")</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-receipt"></i>
            </div>
            <div class="stat-label">Transactions</div>
            <div class="stat-value">@totalTransactions</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <div class="stat-label">Items Sold</div>
            <div class="stat-value">@totalItems</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-graph-up-arrow"></i>
            </div>
            <div class="stat-label">Avg. Sale</div>
            <div class="stat-value">@averageSale.ToString("C")</div>
        </div>
    </div>

    <div class="sales-grid">
        @foreach (var sale in Model)
        {
            <div class="sale-card">
                <div class="sale-header">
                    <div class="sale-date-badge">
                        <span class="sale-month">@sale.SaleDate.ToString("MMM")</span>
                        <span class="sale-day">@sale.SaleDate.Day</span>
                        <span class="sale-time">@sale.SaleDate.ToString("h:mm tt")</span>
                    </div>
                    <div class="sale-amount">
                        <div class="amount-label">Total</div>
                        <div class="amount-value">@sale.TotalAmount.ToString("C")</div>
                    </div>
                </div>

                <div class="sale-details">
                    <div class="sale-detail">
                        <i class="bi bi-person"></i>
                        <div class="detail-content">
                            <span class="detail-label">Sold By</span>
                            <span class="detail-value" title="@(sale.Employee?.Name ?? "Unknown")">
                                @(sale.Employee?.Name ?? "Unknown")
                            </span>
                        </div>
                    </div>

                    <div class="sale-detail">
                        <i class="bi bi-bag"></i>
                        <div class="detail-content">
                            <span class="detail-label">Items</span>
                            <span class="detail-value">@(sale.SaleItems?.Count ?? 0) product@(sale.SaleItems?.Count == 1 ? "" : "s")</span>
                        </div>
                    </div>
                </div>

                <div class="sale-actions">
                    <a asp-action="Edit" asp-route-id="@sale.Id" class="action-btn">
                        <i class="bi bi-pencil"></i>
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@sale.Id" class="action-btn action-btn-delete">
                        <i class="bi bi-trash"></i>
                        Delete
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="empty-state">
        <div class="empty-icon">
            <i class="bi bi-graph-up"></i>
        </div>
        <h2 class="empty-title">No Sales Yet</h2>
        <p class="empty-text">Start recording sales transactions to track your business performance.</p>
        <a asp-action="Create" asp-route-branchId="@branchId" class="btn-create">
            <i class="bi bi-plus-circle"></i>
            Record Your First Sale
        </a>
    </div>
}