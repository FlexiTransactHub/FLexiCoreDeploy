@model FlexiCore.Models.PaymentsDashboardViewModel
@using System.Linq

@{
    ViewData["Title"] = "Payments Dashboard";
    Layout = "_DashboardLayout";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 900;
        background: linear-gradient(135deg, #8b5cf6, #6366f1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    .page-subtitle {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-top: 0.5rem;
    }

    .breadcrumb-custom {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        color: var(--text-secondary);
        font-size: 0.875rem;
    }

        .breadcrumb-custom a {
            color: var(--accent-primary);
            text-decoration: none;
            transition: color 0.2s ease;
        }

            .breadcrumb-custom a:hover {
                color: var(--accent-secondary);
            }

    .btn-create {
        background: linear-gradient(135deg, #8b5cf6, #6366f1);
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(139, 92, 246, 0.4);
            color: white;
        }

        .btn-create i {
            font-size: 1.1rem;
        }

    /* Section Cards */
    .section-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 2rem;
        box-shadow: var(--shadow-md);
        margin-bottom: 2rem;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 0;
    }

        .section-title i {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(99, 102, 241, 0.1));
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.125rem;
            color: #8b5cf6;
        }

    .btn-view-all {
        padding: 0.625rem 1.5rem;
        border-radius: 10px;
        border: 1px solid var(--border-color);
        background: var(--bg-primary);
        color: var(--text-primary);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-view-all:hover {
            background: var(--accent-primary);
            color: white;
            border-color: var(--accent-primary);
            transform: translateY(-2px);
        }

    /* Transactions Grid */
    .transactions-grid {
        display: grid;
        gap: 1rem;
    }

    .transaction-item {
        background: var(--bg-primary);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.25rem;
        transition: all 0.3s ease;
        display: grid;
        grid-template-columns: auto 1fr auto;
        gap: 1.25rem;
        align-items: center;
    }

        .transaction-item:hover {
            border-color: #8b5cf6;
            transform: translateX(5px);
        }

    .transaction-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(99, 102, 241, 0.1));
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: #8b5cf6;
    }

    .transaction-details {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        min-width: 0;
    }

    .transaction-date {
        font-size: 0.813rem;
        color: var(--text-secondary);
    }

    .transaction-method {
        font-size: 0.938rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .transaction-reference {
        font-size: 0.813rem;
        color: var(--text-secondary);
        font-family: monospace;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .transaction-amount-wrapper {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.5rem;
    }

    .transaction-amount {
        font-size: 1.25rem;
        font-weight: 900;
        background: linear-gradient(135deg, #8b5cf6, #6366f1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
    }

        .status-badge.success {
            background: rgba(34, 197, 94, 0.1);
            color: #16a34a;
        }

        .status-badge.pending {
            background: rgba(251, 146, 60, 0.1);
            color: #ea580c;
        }

        .status-badge.failed {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
        }

        .status-badge i {
            font-size: 0.625rem;
        }

    /* Payment Links Grid */
    .links-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1.5rem;
    }

    .link-card {
        background: var(--bg-primary);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .link-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #8b5cf6, #6366f1);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .link-card:hover {
            border-color: #8b5cf6;
            transform: translateY(-3px);
            box-shadow: var(--shadow-lg);
        }

            .link-card:hover::before {
                transform: scaleX(1);
            }

    .link-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;
    }

    .link-amount {
        font-size: 1.5rem;
        font-weight: 900;
        background: linear-gradient(135deg, #8b5cf6, #6366f1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .link-date {
        font-size: 0.813rem;
        color: var(--text-secondary);
    }

    .link-url {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 0.75rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .link-url i {
            color: #8b5cf6;
            font-size: 1rem;
        }

        .link-url a {
            color: #8b5cf6;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 600;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            flex: 1;
        }

            .link-url a:hover {
                text-decoration: underline;
            }

    .payment-methods {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .method-badge {
        padding: 0.375rem 0.875rem;
        border-radius: 50px;
        font-size: 0.813rem;
        font-weight: 600;
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        color: var(--text-primary);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .method-badge i {
            font-size: 0.875rem;
            color: #8b5cf6;
        }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        background: var(--bg-primary);
        border: 2px dashed var(--border-color);
        border-radius: 12px;
    }

    .empty-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1rem;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(99, 102, 241, 0.1));
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .empty-icon i {
            font-size: 2rem;
            color: #8b5cf6;
        }

    .empty-title {
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .empty-text {
        color: var(--text-secondary);
        font-size: 0.938rem;
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .links-grid {
            grid-template-columns: 1fr;
        }

        .transaction-item {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .transaction-icon {
            margin: 0 auto;
        }

        .transaction-amount-wrapper {
            align-items: center;
        }
    }
</style>

<div class="breadcrumb-custom">
    <a asp-controller="Businesses" asp-action="Index">
        <i class="bi bi-building"></i> My Businesses
    </a>
    <i class="bi bi-chevron-right"></i>
    <span><i class="bi bi-credit-card"></i> Payments</span>
</div>

<div class="page-header">
    <div>
        <h1 class="page-title">Payments Dashboard</h1>
        <p class="page-subtitle">Manage payment links and track transactions</p>
    </div>
    <a asp-action="Create" asp-controller="Payments" class="btn-create">
        <i class="bi bi-plus-circle"></i>
        Create Payment Link
    </a>
</div>

<!-- Recent Transactions -->
<div class="section-card">
    <div class="section-header">
        <h2 class="section-title">
            <i class="bi bi-arrow-left-right"></i>
            Recent Transactions
        </h2>
        @if (Model.RecentTransactions != null && Model.RecentTransactions.Any())
        {
            <a asp-action="Transactions" asp-controller="Payments" class="btn-view-all">
                View All
                <i class="bi bi-arrow-right"></i>
            </a>
        }
    </div>

    @if (Model.RecentTransactions != null && Model.RecentTransactions.Any())
    {
        <div class="transactions-grid">
            @foreach (var transaction in Model.RecentTransactions)
            {
                var statusClass = transaction.Status?.ToLower() switch
                {
                    "completed" => "success",
                    "successful" => "success",
                    "pending" => "pending",
                    "failed" => "failed",
                    _ => "pending"
                };
                var statusIcon = transaction.Status?.ToLower() switch
                {
                    "completed" => "bi-check-circle-fill",
                    "successful" => "bi-check-circle-fill",
                    "pending" => "bi-clock-fill",
                    "failed" => "bi-x-circle-fill",
                    _ => "bi-clock-fill"
                };

                <div class="transaction-item">
                    <div class="transaction-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div class="transaction-details">
                        <div class="transaction-date">@transaction.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</div>
                        <div class="transaction-method">@transaction.PaymentMethod</div>
                        <div class="transaction-reference" title="@transaction.TransactionReference">
                            Ref: @transaction.TransactionReference
                        </div>
                    </div>
                    <div class="transaction-amount-wrapper">
                        <div class="transaction-amount">@transaction.Amount.ToString("C")</div>
                        <span class="status-badge @statusClass">
                            <i class="bi @statusIcon"></i>
                            @transaction.Status
                        </span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-arrow-left-right"></i>
            </div>
            <div class="empty-title">No Transactions Yet</div>
            <p class="empty-text">Start by creating a payment link to receive payments</p>
        </div>
    }
</div>

<!-- Recent Payment Links -->
<div class="section-card">
    <div class="section-header">
        <h2 class="section-title">
            <i class="bi bi-link-45deg"></i>
            Recent Payment Links
        </h2>
        @if (Model.RecentPaymentLinks != null && Model.RecentPaymentLinks.Any())
        {
            <a asp-action="PaymentLinks" asp-controller="Payments" class="btn-view-all">
                View All
                <i class="bi bi-arrow-right"></i>
            </a>
        }
    </div>

    @if (Model.RecentPaymentLinks != null && Model.RecentPaymentLinks.Any())
    {
        <div class="links-grid">
            @foreach (var link in Model.RecentPaymentLinks)
            {
                <div class="link-card">
                    <div class="link-header">
                        <div class="link-amount">@link.Amount.ToString("C")</div>
                        <div class="link-date">@link.CreatedAt.ToString("MMM dd, yyyy")</div>
                    </div>

                    <div class="link-url">
                        <i class="bi bi-link-45deg"></i>
                        <a href="@@(Request.Scheme + "://" + Request.Host + link.LinkUrl)" target="_blank" title="@@(Request.Scheme + "://" + Request.Host + link.LinkUrl)">
                            @@(Request.Scheme + "://" + Request.Host + link.LinkUrl)
                        </a>
                    </div>

                    <div class="payment-methods">
                        @if (link.NairaEnabled)
                        {
                            <span class="method-badge">
                                <i class="bi bi-currency-exchange"></i>
                                Naira (Paystack)
                            </span>
                        }
                        @if (link.CryptoEnabled)
                        {
                            <span class="method-badge">
                                <i class="bi bi-coin"></i>
                                Crypto
                            </span>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-link-45deg"></i>
            </div>
            <div class="empty-title">No Payment Links Created</div>
            <p class="empty-text">Create your first payment link to start accepting payments</p>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}