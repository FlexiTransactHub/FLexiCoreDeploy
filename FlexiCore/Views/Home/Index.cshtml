                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">Manage Business</a>
                    <a href="#solutions" class="btn btn-outline-light">Scan Solutions</a>
                </div>
            </div>
        </div>
    </div>
</div>

