@model FlexiCore.Models.Employee
@{
    ViewData["Title"] = "Create Employee";
    var isBranchSelectable = ViewData["IsBranchSelectable"] as bool? ?? true;
    var branches = ViewData["Branches"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
}

<h2>Create Employee</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BranchId">Branch</label>

        @{
            var selectAttrs = new Dictionary<string, object>
                {
                { "asp-for", "BranchId" },
                { "class", "form-control" },
                { "asp-items", "branches" }
                };

            if (isBranchSelectable == false)
            {
                selectAttrs["disabled"] = "disabled";
            }
        }

        <select @Html.Raw(string.Join(" ", selectAttrs.Select(kvp => $"{kvp.Key}=\"{kvp.Value}\"")))>
            @if (isBranchSelectable == true)
            {
                <option value="">Select a branch</option>
            }
        </select>

        <span asp-validation-for="BranchId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role">Role</label>
        <input asp-for="Role" class="form-control" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-group">
        @if (ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index"
           asp-route-branchId="@ViewData["BranchId"]"
           class="btn btn-secondary ml-2">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}